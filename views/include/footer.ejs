<link href="/css/footer.css" rel="stylesheet" />

<footer class="footer">
  <div class="top-section">
    <div class="company-info">
      <a class="navbar-brands d-flex align-items-center brand" href="/">
        <div class="icon-wrapper">
          <i class="fa-solid fa-globe"></i>
        </div>
        <span>stayNest</span>
      </a>

      <p id="description">
        Your trusted travel companion for discovering the world's <br />
        most incredible packages. We create unforgettable <br />
        experiences that inspire and transform.
      </p>

      <div class="contact-info">
        <p><i class="icon fas fa-envelope"></i>hello&#64;stayNest.com</p>
        <p><i class="icon fas fa-phone"></i> +91 1234567891</p>
        <p><i class="icon fas fa-map-marker-alt"></i>India</p>
      </div>
    </div>

    <div class="links">
      <div class="quick-links">
        <h4>Links For You</h4>
        <ul>
          <li><a href="/listings">Home</a></li>
          <li><a href="/packages">Travel Packages</a></li>
          <li><a routerLink="/about-us">About Us</a></li>
          <li><a routerLink="/contact-us">Contact Us</a></li>
        </ul>
      </div>

      <div class="support">
        <h4>Support For You</h4>
        <ul>
          <li><a href="/help">Help Center</a></li>
          <li><a href="/booking-policy">Booking Policy</a></li>
          <li><a href="/insurance">Travel Insurance</a></li>
          <li><a href="/terms">Terms of Service</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
        </ul>
      </div>
    </div>
  </div>

  <hr />

  <div class="whole">
    <div class="newsletter-section">
      <h4>Stay Updated</h4>
      <p>Get travel tips and exclusive offers</p>
    </div>

    <div class="newsletter-form">
      <form>
        <input
          class="email-input"
          type="email"
          placeholder="Your email address"
        />
        <button
          class="subscribe-btn"
          type="submit"
          (click)="onSubscribe($event)"
        >
          Subscribe
        </button>
      </form>

      <div class="subscription-message"></div>
    </div>
  </div>
  <hr />

  <div class="bottom-section">
    <div class="copyright">
      <p>&copy;2025 stayNest. All rights reserved.</p>
    </div>

    <div class="social-links">
      <a href="#"><i class="fab fa-facebook"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-youtube"></i></a>
    </div>
  </div>
</footer>
