    <script src="/js/script.js"></script>
    <script>
      // Auto close bootstrap alerts after 3 seconds
      setTimeout(() => {
        document.querySelectorAll(".alert-success").forEach((alert) => {
          const bsAlert = new bootstrap.Alert(alert);
          bsAlert.close();
        });
      }, 3000);

      // setTimeout(() => {
      //   document.querySelectorAll(".alert-danger").forEach((alert) => {
      //     const bsAlert = new bootstrap.Alert(alert);
      //     bsAlert.close();
      //   });
      // }, 10000);

      setTimeout(() => {
        document.querySelectorAll(".error-alert").forEach((alert) => {
          const errorAlert = new bootstrap.Alert(alert);
          errorAlert.close();
        });
      }, 5000);
    </script>
  </body>
