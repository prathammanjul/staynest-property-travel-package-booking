      font-weight: bold;
      color: #344256;
      margin-bottom: 1rem;
    }

    /* Price section adjustments */
    .price-section {
      margin-bottom: 1.25rem;
    }

    .price-label {
      font-size: 14px;
      color: #566e8f;
      margin-bottom: 0.25rem;
    }

    .price-value {
      font-size: 24px;
      font-weight: bold;
      color: #0da2e7;
      margin-bottom: 0.25rem;
    }

    .price-original {
      font-size: 16px;
      color: #999;
      text-decoration: line-through;
    }

    /* Button styling for tablet */
    .book-now-btn {
      width: 100%;
      color: white;
      border: none;
      font-weight: 600;
      cursor: pointer;
      margin-bottom: 1rem;
      padding: 0.75rem;
      border-radius: 10px;
