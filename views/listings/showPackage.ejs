  /* Small Tablet adjustments - 650px and below */
  @media (max-width: 650px) {
    .main-content {
      padding: 1.5rem 1.5rem 0rem 1.5rem;
      gap: 2rem;
    }

    /* Stack booking cards vertically on smaller tablets */
    .right-sidebar {
      flex-direction: column;
      gap: 1.5rem;
    }

    .booking-card {
      width: 100%;
      min-width: auto;
    }

    /* Adjust bullet details for smaller tablets */
    .section {
      gap: 1.5rem 2rem;
    }

    .bullet-details .icon {
