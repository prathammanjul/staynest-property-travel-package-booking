<% layout("/layouts/boilerplate") %>


<style>
 
.card{
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);

}
  .card-body {

    padding: 1.5rem !important;

  }
  .travel-package {
    display: flex;
    flex-wrap: wrap;
    flex-shrink: 1;
    justify-content: space-between;
    background-color: #f8f8f6;
    padding: 32px;

  }

 
  .card-body p {
    color: #566e84;
    font-weight: 400;
  }
  .location {
    font-size: 14px;
  }
  .card-title {
    font-size: 20px;
    color: #344256;
    font-weight: 600;
  }
  .card-text-d {
    font-size: 16px !important;
  }
 

  .card-bottom .price {
    font-weight: bolder;
    font-size: 18px;
    color: #0da2e7;
    padding-top: 5px;
  }
  .card-link {
    font-weight: bolder;
    font-size: 14px;
    color: #0da2e7;
    text-decoration: none;
    transition: all 0.3s ease-out;
    border-radius: 10px;
    height: 2.7rem;

    padding: 9px 8px 3px 9px;
  }
  .card-link:hover {
    background-color: #0da2e7;
    color: white;
    transform: translateY(-2px);
  }


  .days-people {
    color: #566e84;
    font: 14px;
    list-style: none;
    padding: 0%;
    font-size: 14px;
    font-weight: 500;
  }

  .days-people li i {
    padding-right: 10px;
  }
  .details {
    color: #566e84;
    font: 14px;
  }

  .details ul {
    padding-left: 15px;
    line-height: 2rem;
    font-size: 14px;
    font-weight: 500;
  }

  .details ul li::marker {
    color: #0da2e7;
    font-size: 18px;
  }
  .package-card {
    height: 34rem;
  }
  .bottom .price {
    color: #0da2e7;
    font-weight: bolder;
    font-size: 18px;
  }






.banner {
  background: linear-gradient(135deg, #3591ce, #1f7f8c, #2093a2);
  height: 384px;
  width: 100%;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 0 1rem;
}
.banner .heading h1 {
  color: #ffffff;
  font-size: 60px;
  font-weight: 600;
}
.banner .heading h5 {
  color: #ffffff;
  font-size: 24px;
  font-weight: 400;
  line-height: 2rem;
}
.card-text-d {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.rating {
  display: flex;
  justify-content: space-between;
}

.rating .category {
  color: white;
  background-color: #f97415;
  font-size: 12px;
  font-weight: bolder;
  border-radius: 15px;
  padding: 8px;
  line-height: 0.6rem;
  margin-bottom: 1.5rem;
}
.rating .fa-star {
  color: #f97415;

}
.btn .book {
  width: 100%;
  padding: 14px;
}
.category-mountains{
  background-color: #0da2e7 !important;
  color: #fff;
}
.category-adventure{
  background-color: #2ecc71 !important;
  color: #fff;
}

</style>


<section class="banner">
  <div class="heading">
    <h1>Travel Packages</h1>
    <h5>
      Discover curated travel experiences designed for every type of <br />
      adventurer
    </h5>
  </div>
</section>

<!-- Package Cards -->

<section class="top-destination travel-package">
  <% for(let package of allPackages) { %>
  <div class="cards">
    <div class="card package-card" style="width: 24rem">
      <div class="card-body">
   
        <div class="rating">
          <p class="best-seller category" ><%=package.category  %></p>

          <p class="star" >
            <i class="fa fa-star "></i><%= package.rating %>
          </p>
        </div>

        <!-- Package Title -->
        <h5 class="card-title pak-title"><%= package.title %></h5>

        <!-- Description -->
        <p class="card-text-d"><%= package.description %> </p>

        <!-- Days and People -->
        <ul class="days-people">
          <li><i class="fa-regular fa-calendar"></i> <%= package.duration %> Days</li>
          <li><i class="fa-solid fa-users"></i> <%=package.groupSize %> people</li>
        </ul>

        <!-- Details / Highlights -->
        <div class="details">
            <ul>
                <% package.include.slice(0, 4).forEach(item => { %>
                    <li><%= item %></li>
                <% }) %>
            </ul>
        </div>

        <hr />

        <!-- Pricing Section -->
        <div class="bottom">
          <p class="price"> &#8377; <%= package.price ? package.price.toLocaleString("en-IN") :
            "0" %></p>

        </div>
        <div class="btn">
            <a href="/packages/<%= package._id %>" class=" btn-signup book">View details â†’</a>
        </div>
      </div>
    </div>
  </div>
   <% } %>
</section>

<div class="travel-agent">
  <h1>Can't find the perfect package?</h1>
  <p>
    Our travel experts can help you create a custom package tailored to your
    preferences and <br />budget.
  </p>
</div>

<div class="btn">
  <a class="btn-signup"
    >Contact Travel Expert &rarr;</a
  >
</div>


<script>


  document.querySelectorAll(".category").forEach(element => {
    const text = element.innerHTML;
    if(text == "Mountains"){
      element.classList.add("category-mountains")
    }
    if(text == "Adventure"){
      element.classList.add("category-adventure");
    }    
  });
  
</script>