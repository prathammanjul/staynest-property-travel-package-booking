<% layout("layouts/boilerplate") %>
<link href="/css/signup.css" rel="stylesheet" />

<!-- --------------------------------------------------------------- -->

<div class="containers">
  <div class="left-container">
    <div class="ls-card card">
      <div class="top">
        <h4>Join stayNest</h4>
        <p>Create your account and start your travel adventure today</p>
      </div>

      <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="username" class="form-label">Username</label>
          <input
            type="text"
            id="username"
            name="username"
            placeholder="john_john"
            class="form-control input-style"
            required
          />

          <!-- //bootstrap classes for success failure text -->
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter the valid username</div>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="john@example.com"
            class="form-control input-style"
            required
          />

          <!-- //bootstrap classes for success failure text -->
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter the valid email</div>
        </div>

        <!-- password  -->
        <div class="mb-3">
          <label for="password" class="form-label">password</label>
          <input
            name="password"
            id="password"
            type="password"
            placeholder="Create a strong password"
            class="form-control input-style"
            required
          />

          <!-- //bootstrap classes for success failure text -->
          <div class="valid-feedback">Looks Good!</div>
          <div class="invalid-feedback">Please enter the valid password</div>
        </div>

        <button class="btn-signup book submit">SignUp</button>
      </form>

      <p class="create-acc">
        Already have an account?
        <a class="forget-pass sign-up" href="/login">Sign in</a>
      </p>
    </div>
  </div>

  <div class="right-container">
    <div class="content">
      <h1 class="heading">Your Next Adventure Awaits</h1>
      <h5 class="sub-head">
        Join thousands of travelers who trust Tourizio for their dream vacations
      </h5>
    </div>
  </div>
</div>
